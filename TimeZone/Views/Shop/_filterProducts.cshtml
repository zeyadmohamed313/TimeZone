
<div class="popular-items">
    
    <div class="shop-items-space">
        @foreach (var product in Model)
        {
            <div class="item">
                <a href="#">
                    <img src="data:image/png;base64,@Convert.ToBase64String(product.Img)" alt="Product Image" />
                </a>
                <h4>@product.Name</h4>
                <h5>$ @product.Price</h5>
                <div class="overlay"></div>
                <a href="/Cart/AddToCart/@product.Id"><div class="addtocart"><span>Add To Cart</span></div></a>
            </div>
        }
    </div>
</div>
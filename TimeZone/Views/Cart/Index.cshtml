@model List<BusinessLogicLayer.ViewModels.ProductViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Cart.css" />
    <link rel="stylesheet" href="~/css/Home.css">
    <link rel="stylesheet" href="~/css/Shop.css">
    <link rel="stylesheet" href="~/css/Login.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <title>TimeZone</title>
</head>
<body>

    <div id="loadingSpinner" style="display: none;">
        <div class="spinner"></div>
    </div>



    <header>

        <div class="header-img">
            <img src="/Images/Home/timezone.png">
        </div>

        <div class="header-nav">
            <nav>
                <a href="/Home">Home</a>
                <a href="/Shop">Shop</a>
                <a href="/About">About</a>
                <a href="/Contact">Contact</a>
            </nav>
        </div>

        <div class="header-icons">
            <a href="#"><i class="fa-solid fa-magnifying-glass"></i></a>
            @if (!_signInManager.IsSignedIn(User))
            {
                <a href="/Account/Login"> <i class="fa-regular fa-user"></i></a>
            }
            else
            {
                <a href="/Account/LogOut"><i class="fa-solid fa-right-from-bracket"></i></a>
            }
            <a href="/Cart"><i class="fa-solid fa-cart-shopping"></i></a>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Admin"> <i class="fa-solid fa-hammer"></i></a>
            }
        </div>

    </header>

    <div class="shop-landing-page">
        <h1>Cart</h1>
    </div>






    <div class="cart-container">
        <h1>Your Shopping Cart</h1>

        @if (Model.Count > 0)
        {
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="product-info">
                                    <img src="data:image/png;base64,@Convert.ToBase64String(item.Img)" alt="Product Image" style="    height: 110px;
    margin-left: 14px;
    margin-top: 8px;" />
                                    <p>@item.Name</p>
                                </div>
                            </td>
                            <td class="price">$@item.Price</td>
                            <td>
                                <input type="number" class="quantity" value="@item.Quantity" min="1" />
                            </td>
                            <td class="total">$@(item.Price * item.Quantity)</td>
                            <td>
                                <form action="/Cart/DeletefromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <button type="submit">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="cart-total">
                <p>Total: $<span id="cartTotal">@Model.Sum(item => item.Price * item.Quantity)</span></p>
            </div>

            <div class="checkout-button">
                <a href="/Checkout">Proceed to Checkout</a>
            </div>
        }
        else
        {
            <p>Your cart is empty.</p>
        }
    </div>













    <div class="features">
        <div class="bar">

            <div class="item">
                <i class="fa-solid fa-box"></i>
                <h3>Free Shipping Method</h3>
                <span>aorem ixpsacdolor sit ameasecur adipisicing elitsf edasd.</span>
            </div>

            <div class="item">
                <i class="fa-solid fa-lock"></i>
                <h3>Secure Shipping Method</h3>
                <span>aorem ixpsacdolor sit ameasecur adipisicing elitsf edasd.</span>
            </div>

            <div class="item">
                <i class="fa-solid fa-shield-halved"></i>
                <h3>Secure Payment System</h3>
                <span>aorem ixpsacdolor sit ameasecur adipisicing elitsf edasd.</span>
            </div>

        </div>
    </div>

    <div class="footer">
        <div class="part">
            <img src="/Images/Home/timezone.png" />
            <span>Asorem ipsum adipolor sdit amet, consectetur adipisicing elitcf sed do eiusmod tem.</span>
        </div>

        <div class="part">
            <h4>Quick Links</h4>

            <nav>
                <a href="#">About</a>
                <a href="#">Offers & Discounts</a>
                <a href="#">Get Coupon</a>
                <a href="#">Contact Us</a>
            </nav>
        </div>

        <div class="part">
            <h4>New Products</h4>

            <nav>
                <a href="#">About</a>
                <a href="#">Offers & Discounts</a>
                <a href="#">Get Coupon</a>
                <a href="#">Contact Us</a>
            </nav>
        </div>

        <div class="part">
            <h4>Support</h4>

            <nav>
                <a href="#">Frequently Asked Questions</a>
                <a href="#">Offers & Discounts</a>
                <a href="#">Terms & Conditions</a>
                <a href="#">Privacy Policy</a>
            </nav>
        </div>
    </div>

    <div class="last">
        <div class="text">
            <p>&copy; 2024 Your Company Name. All rights reserved.</p>
        </div>

        <div class="icon">
            <a href="#"><i class="fa-brands fa-facebook"></i></a>
            <a href="#"><i class="fa-brands fa-instagram"></i></a>
            <a href="#"><i class="fa-brands fa-twitter"></i></a>
        </div>
    </div>

    <!-- Floating icon -->
    <div class="floating-icon" id="scrollToTopBtn">
        <img src="/Images/Home/scroll-to-top.png" alt="Scroll to Top">
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>
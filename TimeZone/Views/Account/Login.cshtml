@model BusinessLogicLayer.ViewModels.LoginViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Home.css">
    <link rel="stylesheet" href="~/css/Shop.css">
    <link rel="stylesheet" href="~/css/About.css">
    <link rel="stylesheet" href="~/css/Login.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <title>Login</title>
</head>
<body>
    <div id="loadingSpinner" style="display: none;">
        <div class="spinner"></div>
    </div>


    <header>

        <div class="header-img">
            <img src="/Images/Home/timezone.png">
        </div>

        <div class="header-nav">
            <nav>
                <a href="/Home">Home</a>
                <a href="/Shop">Shop</a>
                <a href="/About">About</a>
                <a href="/Contact">Contact</a>
            </nav>
        </div>

        <div class="header-icons">
            <a href="#"><i class="fa-solid fa-magnifying-glass"></i></a>
            @if (!_signInManager.IsSignedIn(User))
            {
                <a href="/Account/Login"> <i class="fa-regular fa-user"></i></a>
            }
            else
            {
                <a href="/Account/LogOut"><i class="fa-solid fa-right-from-bracket"></i></a>
            }
            <a href="/Cart"><i class="fa-solid fa-cart-shopping"></i></a>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Admin"> <i class="fa-solid fa-hammer"></i></a>
            }
        </div>

    </header>


    <div class="shop-landing-page">
        <h1>Login</h1>
    </div>


  <div class="login-container">
    <div class="shape">
        <div class="text">
        <h2 style="text-align:center;">New To Our Shop ?</h2>
        <span>If you don't have an account, sign up and enjoy a seamless experience with our services.</span>
                <a href="/Account/Register">
                    <div class="btn">
                        Create An Account
                    </div>
                </a>
        </div>
    </div>
     <div class="signin">

            <h1>
                Welcome Back !
                Please Sign in now
            </h1>
        <div class="form">
                <form asp-action="TryLogin" asp-controller="Account" method="post" id="myForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#myForm">
                    <div>
                        <input asp-for="UserName" type="text" id="username" name="UserName" placeholder="UserName" required>
                        <div style="color:red; margin-top:20px;">
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>

                    <div>
                        <input asp-for="Password" type="password" id="password" name="Password" placeholder="Password" required>
                        <div style="color:red; margin-top:20px;">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <div style="margin-top:30px;">
                        <input asp-for="RememberMe" type="checkbox" id="RememberMe" name="RememberMe" value="RememberMe" style="width:3%;">
                        <label asp-for="RememberMe"> RememberMe</label><br>
                    </div>

                    <div style="color:red; margin-top:20px;>
                        @Html.ValidationSummary()
                    </div>

                    <button class="login-btn" type="submit">Login</button>
                    <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="btn btn-lg btn-google social-btn">
                        <i class="fa-brands fa-google"></i>
                    </a>
                </form>
                
        </div>
       </div>
        
  </div>








